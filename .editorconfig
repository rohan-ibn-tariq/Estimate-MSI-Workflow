# ============================================
# EditorConfig - Code Style Configuration
# ============================================

# Top-most EditorConfig file
root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell script files
[*.sh]
indent_style = space
indent_size = 2

# TSV files
[*.tsv]
indent_style = tab
insert_final_newline = false
